<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="OrderManagementSystem.MainPage"
             Title="Menedżer Produktów">

    <ScrollView>
        
    
    <VerticalStackLayout Padding="20">
        <!--#region Entries -->
        <Label Text="Dodaj nowy produkt" FontSize="20" 
               HorizontalOptions="Center" 
               Margin="0,0,0,10" />

        <Entry x:Name="ProductNameEntry" Placeholder="Nazwa produktu"/>
        
        <Entry x:Name="ProductPriceEntry" Placeholder="Cena produktu" 
               Keyboard="Numeric"/>

        <Label Text="Kategoria:"/>
        <Picker x:Name="KategoriaPicker" Title="Wybierz kategorię">
            <Picker.ItemsSource>
                <x:Array Type="{x:Type x:String}">
                    <x:String>Elektronika</x:String>
                    <x:String>Odzież</x:String>
                    <x:String>Spożywcze</x:String>
                </x:Array>
            </Picker.ItemsSource>
        </Picker>

        <Button Text="Dodaj produkt"
                Clicked="AddProduct_Clicked"/>
        <!--#endregion-->

        <Label Text="Lista produktów" FontSize="20"/>

        <CollectionView x:Name="collectionView" ItemsLayout="VerticalList" SelectionMode="Single"
                        ItemsSource="{Binding ProductsList}">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame Margin="10">
                        <Grid ColumnDefinitions="*,*,*" Padding="5">
                            <Label Text="{Binding Name}" FontSize="16" Grid.Column="0"/>
                            <Label Text="{Binding Price}" FontSize="16" Grid.Column="1"/>
                            <Label Text="{Binding Category}" FontSize="16" Grid.Column="2"/>
                        </Grid>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>




        <!-- <ListView ItemsSource="{Binding ProductsList}">
             Define the appearance of each item in the ListView 
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <StackLayout>
                            <Label Text="{Binding Name}" FontSize="16" />
                            <Label Text="{Binding Price}" FontSize="16" />
                            <Label Text="{Binding Category}" FontSize="16" />
                        </StackLayout>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView> -->
        

    </VerticalStackLayout>
    </ScrollView>

</ContentPage>
